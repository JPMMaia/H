module For_loop_expressions;

import C.stdio as stdio;

function print_integer(value: Int32) -> ()
{
    stdio.printf("%d"c, value);
}

export function run_for_loops() -> ()
{
    for index in 0 to 3:
    {
        print_integer(index);
    }

    for index in 0 to 3:
        print_integer(index);

    for index in 0 to 4 step_by 1:
    {
        print_integer(index);
    }

    for index in 4 to 0 step_by -1:
    {
        print_integer(index);
    }
}
