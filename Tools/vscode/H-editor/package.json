{
	"name": "h-editor",
	"displayName": "H Editor",
	"description": "Editor for the H programming language",
	"version": "0.0.1",
	"publisher": "JPMMaia",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/JPMMaia/H"
	},
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [],
	"main": "./out/client/extension",
	"activationEvents": [
		"onLanguage:hlang"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"grammars": [
			{
				"language": "hlang",
				"scopeName": "source.hlang",
				"path": "./syntaxes/hlang.tmGrammar.json"
			}
		],
		"languages": [
			{
				"id": "hlang",
				"extensions": [
					".hltxt"
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"watch": "tsc -b -w",
		"test:extension": "sh ./scripts/e2e.sh",
		"test:scripts": "mocha --require ts-node/register src/**/*.test.ts",
		"clean": "rimraf out"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/object-hash": "^3.0.6",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"@vscode/codicons": "0.0.32",
		"eslint": "^8.57.0",
		"mocha": "^10.0.0",
		"rimraf": "^5.0.7",
		"ts-node": "latest",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@types/mocha": "^9.1.1",
		"@vscode/codicons": "0.0.32",
		"fast-array-diff": "^1.1.0",
		"module-alias": "^2.2.3",
		"object-hash": "^3.0.0"
	},
	"workspaces": [
		"client",
		"server"
	],
	"_moduleAliases": {
		"@core": "out/shared/core",
		"@utilities": "out/shared/utilities"
	}
}