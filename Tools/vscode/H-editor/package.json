{
	"name": "h-editor",
	"displayName": "H Editor",
	"description": "Editor for the H programming language",
	"version": "0.0.1",
	"publisher": "JPMMaia",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/JPMMaia/H"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCustomEditor:heditor.textEditor",
		"onCommand:hello-world.showHelloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "hello-world.showHelloWorld",
				"title": "Hello World (Vue): Show"
			}
		],
		"customEditors": [
			{
				"viewType": "heditor.textEditor",
				"displayName": "H Editor",
				"selector": [
					{
						"filenamePattern": "*.hl"
					}
				]
			}
		]
	},
	"scripts": {
		"install:all": "npm install && npm --prefix ./webview-ui install ./webview-ui",
		"start:webview": "npm --prefix ./webview-ui run start",
		"build:webview": "npm --prefix ./webview-ui run build",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -w -p ./",
		"test": "mocha --require ts-node/register src/**/*.test.ts"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"mocha": "^10.0.0",
		"typescript": "^4.5.5",
		"ts-node": "latest"
	},
	"dependencies": {
		"@types/mocha": "^9.1.1"
	}
}