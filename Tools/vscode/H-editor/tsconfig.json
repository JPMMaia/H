{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "target": "es2020",
    "outDir": "out",
    "lib": [
      "es2020",
      "dom"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true
  },
  "include": [],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "webview-ui"
  ],
  "references": [
    {
      "path": "./client"
    },
    {
      "path": "./server"
    },
    {
      "path": "./src"
    }
  ],
  "_moduleAliases": {
    "@core": "out/src/core",
    "@utilities": "out/src/utilities"
  }
}