{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "lib": [
      "es2020",
      "DOM"
    ],
    "outDir": "./out",
    "rootDir": ".",
    "sourceMap": true,
    "types": [
      "@types/emscripten",
      "@types/node",
    ]
  },
  "include": [
    "packages/core/src/**/*.ts",
    "packages/client/src/**/*.ts",
    "packages/server/src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}